@model DemoDbFirstAproach.Models.Actors
@{
    ViewData["Title"] = "Create";
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="Actor" asp-action="Create" method="post" role="form" class="form-horizontal">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Name -->
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" min="1" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Age -->
        <label asp-for="Age" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <!-- AcademyWinner -->
        <label asp-for="AcademyWinner" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="AcademyWinner" class="form-control" />
            <span asp-validation-for="AcademyWinner" class="text-danger"></span>
        </div>

        <!-- Create button-->
        <div class="form-control">
            <div class="col-md-offset-2">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

